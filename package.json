  },
  "license": "MIT",
  "author": "Steffen <YellowGarbageBag@4s1.de>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "preinstall": "npx only-allow pnpm",
    "build:watch": "nodemon -x npm run build --ignore dist -i *.spec.ts -e ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "test": "echo No tests available"
  },
  "prettier": "@yellowgarbagegroup/eslint-config",
  "devDependencies": {
    "@types/node": "^14.14.41",
    "@yellowgarbagegroup/eslint-config": "2.0.1",
    "eslint": "7.32.0",
    "prettier": "2.3.2",
    "typescript": "4.3.5"
  },
  "publishConfig": {
    "@yellowgarbagegroup:registry": "https://gitlab.com/api/v4/projects/28742456/packages/npm/",
    "access": "public"
  }
}
