{
  "name": "@4s1/snow-white-shared",
  "version": "4.0.0",
  "description": "Snow White - Shared",
  "bugs": {
    "url": "https://gitlab.com/4s1/snow-white/snow-white-shared/issues"
  },
  "repository": "gitlab:4s1/snow-white/snow-white-shared",
  "license": "MIT",
  "author": "Steffen <steffen@4s1.de>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "preinstall": "npx only-allow pnpm",
    "build:watch": "nodemon -x npm run build --ignore dist -i *.spec.ts -e ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "test": "echo No tests available",
    "semantic-release": "semantic-release"
  },
  "prettier": "@4s1/eslint-config",
  "devDependencies": {
    "@4s1/eslint-config": "3.0.0",
    "@4s1/semantic-release-config": "2.0.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/gitlab": "6.2.2",
    "@types/node": "14.17.15",
    "conventional-changelog": "3.1.24",
    "conventional-changelog-conventionalcommits": "4.6.0",
    "eslint": "7.32.0",
    "prettier": "2.4.0",
    "semantic-release": "17.4.7",
    "typescript": "4.4.2"
  },
  "publishConfig": {
    "@4s1:registry": "https://gitlab.com/api/v4/projects/28742456/packages/npm/",
    "access": "public"
  }
}
