{
  "name": "@yellowgarbagebag/snow-white-shared",
  "version": "2.0.1",
  "description": "Snow White Shared",
  "homepage": "https://gitlab.com/yellow-garbage-group/snow-white",
  "bugs": {
    "url": "https://gitlab.com/yellow-garbage-group/snow-white/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:yellow-garbage-group/snow-white.git"
  },
  "license": "ISC",
  "author": "Steffen",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "preinstall": "npx only-allow pnpm",
    "build:watch": "nodemon -x npm run build --ignore dist -i *.spec.ts -e ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "test": "echo No tests available"
  },
  "prettier": "@hest-lab/eslint-config",
  "devDependencies": {
    "@hest-lab/eslint-config": "^1.5.0",
    "@types/node": "^14.14.37",
    "eslint": "^7.23.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": ">=14"
  }
}
